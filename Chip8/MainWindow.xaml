<Window x:Class="Chip8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chip8"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="650" Loaded="Window_Loaded" KeyDown="Key_Down" KeyUp="Key_Up">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis" />
        <Style x:Key="pixel">
            <Setter Property="Shape.Fill" Value="Black"/>
            <Setter Property="Shape.Stroke" Value="Black"/>
        </Style>
      
    </Window.Resources>
    <Grid x:Name="root">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" x:Name="screenRoot"/>

        <StackPanel Grid.Column="1">
            <Label x:Name="opcodeLabel"/>
            <Label x:Name="pcLabel" />
            <Label x:Name="indexLabel" />
        </StackPanel>

    </Grid>
</Window>
